{%- liquid
  assign text = section.settings.text
  assign button_link = section.settings.button_link
  assign button_text = section.settings.button_text
  assign footer_top_bar = section.settings.footer_top_bar
-%}
{%- if footer_top_bar -%}
  {{ 'footer-top-bar.css' | asset_url | stylesheet_tag }}
  {{ 'email-signup.css' | asset_url | stylesheet_tag }}
  <aside id="footer-top-bar" class="footer-top-bar">
    {% render 'register-interest', text: text, button_link: button_link, button_text: button_text %}
  </aside>
{%- endif -%}

{% schema %}
{
  "name": "Footer top bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "footer_top_bar",
      "label": "Enable footer top bar",
      "default": true
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Add a call to action text here."
    },
    {
      "id": "button_text",
      "type": "text",
      "label": "Button label",
      "default": "Explore",
      "info": "Leave the label blank to hide the button."
    },
    {
      "id": "button_link",
      "type": "url",
      "label": "Button link"
    }
  ]
}
{% endschema %}
